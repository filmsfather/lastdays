{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/session/:path*",
      "destination": "/"
    },
    {
      "source": "/dashboard/:path*",
      "destination": "/"
    },
    {
      "source": "/teacher/:path*", 
      "destination": "/"
    },
    {
      "source": "/login",
      "destination": "/"
    }
  ]
}